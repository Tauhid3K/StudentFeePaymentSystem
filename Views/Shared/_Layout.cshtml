@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Student Fee System</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body>

    <!-- Blue top border -->
    <div style="height: 6px; background-color: #007bff;"></div>

    <header>
        <nav class="navbar navbar-dark bg-dark px-3">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Student Fee System</a>
            <ul class="nav ms-auto">

                @* ------------------ Admin Login Page ------------------ *@
                @if (ViewData["Title"]?.ToString() == "Admin Login")
                {
                    <li class="nav-item">
                        <span class="nav-link text-white">Admin Panel</span>
                    </li>
                }

                @* ------------------ Admin Logged In ------------------ *@
                else if (Context.Session.GetString("IsAdmin") == "true")
                {
                    <li class="nav-item">
                        <span class="nav-link text-white">Welcome, Admin (@Context.Session.GetString("AdminEmail"))</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Admin" asp-action="VerifyPayments">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Admin" asp-action="Fees">Manage Semester Fees</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Admin" asp-action="Logout">Logout</a>
                    </li>
                }

                @* ------------------ Student Logged In ------------------ *@
                else if (Context.Session.GetInt32("StudentId") != null)
                {
                    <li class="nav-item">
                        <span class="nav-link text-white">Welcome, @Context.Session.GetString("StudentName")</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Student" asp-action="Dashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Student" asp-action="Logout">Logout</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Support" asp-action="Help">Help</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Support" asp-action="FAQs">FAQs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Support" asp-action="Contact">Contact Info</a>
                    </li>

                }

                @* ------------------ Not Logged In ------------------ *@
                else
                {
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Student" asp-action="Register">Register</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Student" asp-action="Login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Support" asp-action="Help">Help</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Support" asp-action="FAQs">FAQs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Support" asp-action="Contact">Contact Info</a>
                    </li>
                }

            </ul>
        </nav>
    </header>

    <main class="container my-4">
        @RenderBody()
    </main>

    <footer class="text-center py-2 bg-light mt-4">
        <p>&copy; 2025 Student Fee Payment System</p>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
